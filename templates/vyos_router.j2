            description vSAN
            mtu 9000
        }
        vif {{ Nested_Router.Interface.IPStorage.VLAN }} {
{% if Deploy.IPv4 %}
            address {{ Nested_Router.Interface.IPStorage.IPv4.Address }}/{{ Nested_Router.Interface.IPStorage.IPv4.Prefix }}
