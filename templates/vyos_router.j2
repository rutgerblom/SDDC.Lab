        vif {{ Nested_Router.Interface.NSXEdgeUplink2.VLAN }} {
{% if Deploy.IPv4 %}
            address {{ Nested_Router.Interface.NSXEdgeUplink2.IPv4.Address }}/{{ Nested_Router.Interface.NSXEdgeUplink2.IPv4.Prefix }}
{% endif %}{# Deploy.IPv4 #}
