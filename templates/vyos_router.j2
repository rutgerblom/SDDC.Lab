        vif {{ Nested_Router.Interface.RTEP.VLAN }} {
{% if Deploy.IPv4 %}
            address {{ Nested_Router.Interface.RTEP.IPv4.Address }}/{{ Nested_Router.Interface.RTEP.IPv4.Prefix }}
